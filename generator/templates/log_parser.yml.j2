---
apiVersion: batch/v1
kind: Job
metadata:
  name: log-parser
  labels:
    app: log-parser
spec:
  template:
    metadata:
      name: log-parser
      labels:
        app: log-parser
    spec:
      restartPolicy: Never
      containers:
      - name: log-parser
        image: naturalis/nba-log-parser:v0.0.2
        imagePullPolicy: Always
        command: ["/bin/bash"]
        args:
        - "-c"
        - >
          set -x
          && wget -q https://dl.minio.io/client/mc/release/linux-amd64/mc
          && chmod +x mc
					&& cp -fr /mc /mcwriteable
          && ./mc --config-folder /mcwriteable cp --recursive s3-nba-brondata/import-logs/{{current_date.stdout}}/ /logs
          && cd /nba-log-parser
          && php index.php
          && cd /
          && ./mc --config-folder /mcwriteable cp --recursive /logs/ s3-nba-brondata/import-logs/{{current_date.stdout}}
        volumeMounts:
        - name: datadir
          mountPath: /logs
        - name: mc-s3-nba-brondata-config
          mountPath: /mc
      volumes:
      - name: datadir
        emptyDir: {}
      - name: mc-s3-nba-brondata-config
        configMap:
          name: mc-s3-nba-brondata-config
